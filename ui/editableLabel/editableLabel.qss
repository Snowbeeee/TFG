/* --- editableLabel.qss --- */

/* Título del juego en la carta */
QLabel#gameCardTitle {
    color: #ecf0f1;
    font-size: 14px;
    font-weight: bold;
}

/* Campo de edición del título */
QLineEdit#gameCardTitleEdit {
    color: #ecf0f1;
    background-color: #2c3e50;
    font-size: 14px;
    font-weight: bold;
    border: 1px solid #3498db;
    border-radius: 4px;
    padding: 2px 4px;
}
